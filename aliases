alias rm="rm -rf"
alias grep="grep  -i --color=auto"
alias mkdir="mkdir -p"
alias df="df -h"
alias diff="diff -y"
alias aa="sudo service apache2 restart"
alias st="sudo tail -fn 0 /var/log/apache2/error.log"
alias tt="tmux -2"
alias tta="tmux -2 attach"
alias tts="tmux ls"
alias vi="vim"
alias pydev="sudo python setup.py develop"
alias pp="pecan serve config.py"

#Git
alias gs="git status"
alias gg="git stash"
alias gg!="git stash pop"
alias ggx="git stash drop"
alias ggs="git stash list"
alias ggd="git stash show -p stash@{0}"
alias gm="git merge --no-ff"
alias gbd="git branch -D"
